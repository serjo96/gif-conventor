{
  "name": "mp4-to-gif-converter-backend",
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently \"tsc --watch\" \"nodemon\"",
    "build": "tsc",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "test:recovery": "ts-node -r tsconfig-paths/register src/tests/recovery.test.ts",
    "clean-queues": "ts-node -r tsconfig-paths/register src/scripts/clean-queues.ts"
  },
  "dependencies": {
    "bullmq": "4.17.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "file-type": "^20.1.0",
    "load-esm": "^1.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^9.0.0",
    "@bull-board/api": "^5.14.0",
    "@bull-board/express": "^5.14.0",
    "express-basic-auth": "^1.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "@types/uuid": "^9.0.0"
  }
}
